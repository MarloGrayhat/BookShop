<Window x:Class="BookShop.Views.Windows.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShop.Views.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="250" ResizeMode="NoResize">

    
    <Grid x:Name="gridMain">
        <Frame x:Name="frmAuth" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center" 
               NavigationUIVisibility="Hidden"
               Width="{Binding ActualWidth, ElementName=gridMain}" 
               Height="{Binding ActualHeight, ElementName=gridMain}"/>
    </Grid>
</Window>
